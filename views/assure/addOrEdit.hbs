<h3>{{viewTitle}}</h3>

<form action="/assure" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{assure._id}}">
    <div class="form-group">
        <label>Nom</label>
        <input type="text" class="form-control" name="name" placeholder="Nom" value="{{assure.name}}">
        <div class="text-danger">
            {{assure.nameError}}</div>
    </div>
    <div class="form-group">
        <label>Prenom</label>
        <input type="text" class="form-control" name="prenom" placeholder="Prenom" value="{{assure.prenom}}">
        <div class="text-danger">
            {{assure.prenomError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{assure.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>address</label>
            <input type="text" class="form-control" name="address" placeholder="address" value="{{assure.address}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/assure/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>